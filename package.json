{
  "name": "rtm-typescript",
  "version": "1.2.17",
  "files": [
    "docs/**",
    "dist/index.js",
    "dist/src/index.js",
    "dist/src/lib",
    "dist/src/types",
    "dist/rtm-typescript.d.ts"
  ],
  "description": "Strongly typed SDK client for the Remember the Milk API",
  "main": "dist/index.js",
  "typings": "dist/rtm-typescript.d.ts",
  "author": "Ben Wainwright",
  "license": "MIT",
  "scripts": {
    "api:prod": "vite-node ./api/extract.ts '<projectFolder>/dist/dts/index.d.ts'",
    "api-check": "tsc --project tsconfig.checkapi.json && tsconfig-replace-paths --project tsconfig.checkapi.json && vite-node ./api/extract.ts '<projectFolder>/tmp-declarations/dts/index.d.ts'",
    "docs": "typedoc src/index.ts",
    "build": "tsc --project tsconfig.dist.json && tsconfig-replace-paths --project tsconfig.dist.json && npm run api:prod",
    "lint": "eslint .",
    "types": "tsc --noEmit",
    "format": "prettier --write .",
    "types:watch": "tsc --noEmit --watch",
    "test": "vitest --config vitest.unit.config.mts --coverage",
    "test:e2e": "vitest --config vitest.e2e.config.mts",
    "test:e2e:post-release": "vitest --config vitest.e2e.post-release.config.mts",
    "test:watch": "vitest --config vitest.unit.config.mts --watch",
    "test:ui": "vitest --config vitest.unit.config.mts --watch --ui",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@microsoft/api-extractor": "7.38.2",
    "@types/jest-when": "3.5.4",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@vitest/coverage-istanbul": "0.34.6",
    "@vitest/ui": "0.34.6",
    "eslint": "8.52.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "^2.29.0",
    "husky": "8.0.3",
    "jest-when": "3.6.0",
    "msw": "2.0.1",
    "prettier": "3.0.3",
    "tsconfig-replace-paths": "^0.0.14",
    "typedoc": "0.25.3",
    "typedoc-plugin-markdown": "3.17.0",
    "typescript": "5.2.2",
    "vite-node": "0.34.6",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "vitest-mock-extended": "1.3.1"
  }
}
