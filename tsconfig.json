{
  "ts-node": {
    "files": true,
    "esm": true
  },
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": ["vitest.config.ts", "index.ts", "api/extract.ts", "api/dummy.d.ts"],
  "include": ["src/**/*.ts", "test-support/**/*.ts"]
}
