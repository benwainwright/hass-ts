{
  "ts-node": {
    "files": true,
    "esm": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "outDir": "dist",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": ["vitest.config.ts"],
  "include": ["src/**/*.ts"]
}
